<?import com.comp2042.GameOverPanel?>
<?import com.comp2042.GamePausePanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
        <right>
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.7);">
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="score" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                    <Label fx:id="scoreLabel" text="0" style="-fx-text-fill: #00FF00; -fx-font-size: 28; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="level" style="-fx-text-fill: white; -fx-font-size: 16;"/>
                    <Label fx:id="levelLabel" text="1" style="-fx-text-fill: #87CEEB; -fx-font-size: 20; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>
        </right>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <Group fx:id="groupPauseNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GamePausePanel fx:id="gamePausePanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>